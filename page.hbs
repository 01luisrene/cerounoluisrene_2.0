{{!< default}}
{{#post}}
<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}} no-cover{{/if}}">
    {{navigation}}
</header>
<main class="main" role="main">
<div class="contenedor___post">
  <article class="{{post_class}}">
    <header class="page-header">
      <h1 class="post-titulo">{{title}}</h1>
      
      <section class="page-meta flex wrap jcfs aicenter ">
        <div class="box-time flex wrap aicenter">
          <span class="icon-clock"></span>
          <time class="time" datetime="{{date format="YYYY-MM-DD"}}">{{date published_at timeago="true"}}</time>
        </div>
      </section>
      
    </header>
    <section class="post_contenido">
      {{content}}
    </section>
  </article>
</div>
</main>
{{/post}}