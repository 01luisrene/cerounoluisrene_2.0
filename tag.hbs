{{!< default}}
<header class="main-header tag-head {{#if tag.image}}" style="background-image: url({{tag.image}}){{else}} cover-top" style="background-image: url({{@blog.cover}}){{/if}}">
   {{navigation}}
  	<div class="tag-head-contenedor">
      {{#tag}}
	    	<section class="tag interior">
	        <h1 class="tag-titulo">{{name}}</h1>
	        <h2 class="tag-descripcion">
	            {{#if description}}
	                {{description}}
	            {{else}}
	                A {{../pagination.total}}-post collection
	            {{/if}}
	        </h2>
	    	</section>
      {{/tag}}
  	</div>
</header>
<main role="main">
	{{!-- Loop incluye el bucle de posts - partials/loop.hbs --}}
	{{> "loop"}}
</main>